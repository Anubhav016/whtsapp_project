{
    "manifest_version": 3,
    "name": "WhatsApp Translator",
    "version": "1.0",
    "action": {
      "default_popup": "popup.html"
    },
    "permissions": [
      "activeTab",
      "scripting"
    ],
    "content_scripts": [
      {
        "matches": ["https://web.whatsapp.com/*"],
        "js": ["contentScript.js"]
      }
    ]
  }
  